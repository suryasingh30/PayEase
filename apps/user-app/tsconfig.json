{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"  // Corrected typo
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@repo/*": [
        "src/repo/*"  // Adjusted this to match the actual folder structure
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
